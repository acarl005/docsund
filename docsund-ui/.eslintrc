{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    ecmaFeatures: {
      legacyDecorators: true
    }
  },
  "env": {
    "browser": true
  },
  "rules": {
    "semi": [2, "never"],
    "quotes": [2, "double", { "avoidEscape": true }],
    "arrow-parens": [2, "as-needed"]
  }
}
